{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "declaration": true,
    "lib": [
      "ESNext"
    ],
    "sourceMap": true,
    "strict": true,
    "downlevelIteration": true,
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "umd"
  ]
}

